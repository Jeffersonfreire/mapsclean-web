{
  "redirects": [
    {"source": "/", "destination": "/fr-BE", "permanent": true}
  ],
  "rewrites": [
    {"source": "/((?!fr-BE|pt-BR|en|_next|assets|favicon.ico).*)", "destination": "/fr-BE/$1"}
  ],
  "headers": [
    {"source": "/(.*)", "headers": [
      {"key": "X-Frame-Options", "value": "SAMEORIGIN"},
      {"key": "X-Content-Type-Options", "value": "nosniff"},
      {"key": "Referrer-Policy", "value": "strict-origin-when-cross-origin"}
    ]}
  ]
}
